{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "outDir": "../../dist/packages/selectors",
    "paths": {},
    "rootDir": ".",
    "sourceMap": true,
    "inlineSources": true,
    "lib": ["es2015", "dom"],
    "target": "es2015",
    "skipLibCheck": true
  },
  "files": ["public_api.ts"],
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "flatModuleOutFile": "index.js",
    "flatModuleId": "@ngrx/selectors",
    "enableIvy": false
  }
}
